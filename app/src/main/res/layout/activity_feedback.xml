<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="Please provide your feedback"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/edEmail"
            android:hint="Your Email...."
            android:drawableLeft="@drawable/ic_baseline_email_24"

            android:drawablePadding="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/edName"
            android:hint="Your Name...."
            android:drawableLeft="@drawable/ic_baseline_perm_contact_calendar_24"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"


            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:background="@drawable/edittextshape"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/edFeedback"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittextshape"
            android:drawableLeft="@drawable/ic_baseline_feedback_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Your Feedback...."
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fed_button"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/aclonica"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_report"
            android:fontFamily="@font/aclonica"
            android:text=""
            android:layout_marginTop="15dp"
            android:textSize="18sp"

            android:textColor="@color/black"
            android:gravity="center"/>







    </LinearLayout>


</RelativeLayout>