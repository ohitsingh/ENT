<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="Anything we can help?"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/supName"
            android:hint="Enter Your Name"
            android:drawableLeft="@drawable/ic_baseline_email_24"

            android:drawablePadding="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/supEmail"
            android:hint="Enter Your Email"
            android:drawableLeft="@drawable/ic_baseline_perm_contact_calendar_24"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"


            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:background="@drawable/edittextshape"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/supMobile"
            android:hint="Enter the Mobile Number"
            android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"


            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:background="@drawable/edittextshape"
            android:layout_marginTop="30dp"
            android:inputType="number" />


        <EditText
            android:id="@+id/supQuery"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittextshape"
            android:drawableLeft="@drawable/ic_baseline_contact_support_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter Your Query"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sup_button"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/aclonica"/>

        <TextView
            android:id="@+id/sup_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text=""

            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>


</RelativeLayout>